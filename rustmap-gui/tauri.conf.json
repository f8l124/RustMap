{
  "productName": "RustMap",
  "version": "0.1.0",
  "identifier": "com.rustmap.scanner",
  "build": {
    "frontendDist": "./frontend/dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "RustMap",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/rustmap"
    ],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "installerHooks": "./windows/hooks.nsh"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/f8l124/RustMap/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIwNTQxODA5NzFCM0FEQjYKUldTMnJiTnhDUmhVSUwybmg1YXpUczVqOWlKZVNvUGVYdlU1L3BqK2FacVZmYTFaR0YxdG9sSXkK"
    }
  }
}
